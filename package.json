{
  "name": "pressify",
  "version": "0.1.0",
  "description": "Vite & React powered Static Site Generator",
  "keywords": [
    "vite",
    "docs",
    "static site"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codpoe/pressify.git"
  },
  "bugs": {
    "url": "https://github.com/Codpoe/pressify/issues"
  },
  "homepage": "https://github.com/Codpoe/pressify#readme",
  "author": "Codpoe <codpoe.me@gmail.com> (https://github.com/codpoe)",
  "engines": {
    "node": ">= 14.13.1",
    "pnpm": ">= 7"
  },
  "type": "module",
  "files": [
    "bin",
    "dist",
    "client.d.ts",
    "theme.d.ts",
    "shim.d.ts"
  ],
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "exports": {
    ".": "./dist/node/index.js",
    "./client": "./dist/client/index.js",
    "./theme": "./dist/theme/index.ts"
  },
  "bin": {
    "pressify": "bin/pressify.js"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "run-p -l dev:*",
    "dev:node": "tsc -w -p src/node",
    "dev:client": "tsc -w -p src/client",
    "dev:theme": "node scripts/copyTheme.js -w",
    "build": "rimraf dist && run-p -l build:*",
    "build:node": "tsc -p src/node",
    "build:client": "tsc -p src/client",
    "build:theme": "node scripts/copyTheme.js",
    "ci:docs": "pnpm run build && pnpm --filter pressify-docs run build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "release": "node scripts/release.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@codpoe/eslint-config": "^0.1.3",
    "@types/compression": "^1.7.2",
    "@types/fs-extra": "^9.0.13",
    "@types/github-slugger": "^1.3.0",
    "@types/lodash-es": "^4.17.6",
    "@types/mdast": "^3.0.10",
    "@types/node": "^17.0.21",
    "@types/nprogress": "^0.2.0",
    "@types/polka": "^0.5.4",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "@types/react-helmet": "^6.1.5",
    "@types/react-syntax-highlighter": "^15.5.2",
    "@types/react-transition-group": "^4.4.4",
    "@types/unist": "^2.0.6",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "mdast-util-mdx-jsx": "^2.0.1",
    "mdast-util-mdxjs-esm": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "unified": "^10.1.2"
  },
  "dependencies": {
    "@docsearch/css": "^3.1.0",
    "@docsearch/react": "^3.1.0",
    "@iconify/json": "^2.1.56",
    "@mdx-js/react": "^2.1.1",
    "@mdx-js/rollup": "^2.1.1",
    "@rollup/pluginutils": "^4.2.1",
    "@svgr/core": "^6.2.1",
    "@tailwindcss/typography": "^0.5.2",
    "@vitejs/plugin-react": "^1.3.2",
    "acorn": "^8.7.1",
    "acorn-jsx": "^5.3.2",
    "autoprefixer": "^10.4.7",
    "bundle-require": "^3.0.4",
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "consola": "^2.15.3",
    "esbuild": "^0.14.42",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "get-port": "^6.1.2",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.3",
    "hast-util-from-html": "^1.0.0",
    "hast-util-to-string": "^2.0.0",
    "jest-docblock": "^28.0.2",
    "lodash-es": "^4.17.21",
    "mdast-util-to-string": "^3.1.0",
    "nprogress": "^0.2.0",
    "ora": "^6.1.0",
    "picocolors": "^1.0.0",
    "polka": "^0.5.2",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.7",
    "postcss-preset-env": "^7.7.1",
    "prism-react-renderer": "^1.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.3.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-transition-group": "^4.4.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-code-meta": "^1.0.0",
    "remark-mdx-frontmatter": "^1.1.1",
    "rollup": "^2.75.5",
    "shiki": "^0.10.1",
    "sirv": "^2.0.2",
    "tailwindcss": "^3.0.24",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-children": "^2.0.0",
    "unplugin-icons": "^0.14.3",
    "upath": "^2.0.1",
    "valtio": "^1.6.1",
    "vite": "^2.9.13",
    "vite-plugin-conventional-entries": "^0.1.10-beta.7",
    "vite-plugin-conventional-routes": "^0.1.12-beta.9"
  }
}
